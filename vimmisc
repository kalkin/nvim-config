" Information 
" {{{
" vim:foldmarker={{{,}}} tw=80 ft=vim
" Last Modified [ 2010-09-15 ]
" 
" This file contains all configurations which doesn't fit elsewhere
"
" }}}


" Syntax on!
syntax on

" Let's be friendly :)
autocmd VimEnter * echo "Welcome back kalkin :)"
autocmd VimLeave * echo "Cya in Hell."


" Set dictionary to syntax file
autocmd FileType * exec('set  dict+='.$VIMRUNTIME.'/syntax/'.getbufvar("%","current_syntax").'.vim')



filetype plugin on


" Abbreviations

autocmd BufNewFile,BufRead *.p6 setf perl6

if has("autocmd")
  " Enable file type detection.
  " Use the default filetype settings, so that mail gets 'tw' set to 72,
  " 'cindent' is on in C files, etc.
  " Also load indent files, to automatically do language-dependent indenting.
  filetype plugin indent on
  " ...
else
    set cindent
endif


" Use pathogen to easily modify the runtime path to include all
" plugins under the ~/.vim/bundle directory
call pathogen#helptags()
call pathogen#runtime_append_all_bundles()

if &t_Co >= 256
    colorscheme mustang
endif
let mapleader=","
